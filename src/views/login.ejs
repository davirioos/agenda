<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Cria conta ou Entrar</h1>
      <p class="text-center lead">Faça seu login ou Crie sua conta abaixo</p>
      
      <div class="row">
        <div class="col-lg">
          <%- include('includes/messages'); %>
          <h4>Faça seu cadsatro</h4>
          <p>Se você ainda não tem uma conta, preenchar um formulario abaixo</p>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value= <%= csrfToken %> >
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Cria minha conta</button>
          </form>

        </div>

        <div class="col-lg">
          <h4>Faça seu Login</h4>

          <p>Entre Agora</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value= <%= csrfToken %> >
            <div class="form-group">
              <label for="exampleInputEmail1">Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer'); %>